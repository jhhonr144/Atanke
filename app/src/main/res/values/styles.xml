<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DPEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/dp_font_size_medium</item>
    </style>
    <style name="DPEditText.Normal">
        <item name="android:padding">@dimen/dp_spacing_standard</item>
        <item name="android:layout_marginTop">@dimen/dp_spacing_standard</item>
        <item name="android:layout_marginStart">@dimen/dp_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/dp_spacing_standard_new</item>
        <item name="android:background">@drawable/dp_bg_edittext</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="DPButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <!--        <item name="android:foreground">?selectableItemBackground</item>-->
        <item name="android:textSize">@dimen/dp_font_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/dp_bg_button</item>
    </style>
    <style name="DPSubHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_font_size_medium</item>
        <item name="android:lineSpacingExtra">@dimen/dp_spacing_control</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dp_font_size_xlarge</item>
        <item name="android:lineSpacingExtra">@dimen/dp_spacing_control</item>
    </style>

    <style name="subTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="paddingStart">20dp</item>
    </style>


</resources>