<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.traductor.TraduccionFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnIdioma1"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Espanol" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bordegris"
                android:contentDescription="@string/cambiarIdioma"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_change_circle_24"
                tools:ignore="ImageContrastCheck" />

            <Button
                android:id="@+id/btnIdioma2"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kankuamo" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTraducir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:autofillHints=""
            android:background="@drawable/bordeverde"
            android:ems="10"
            android:fontFamily="@font/montserrat_light"
            android:gravity="start|top"
            android:hint="@string/ingresarTexto"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minHeight="150sp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:scrollbars="vertical"
            android:textColorHint="#373535"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bordefondoverde"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/editTraduccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:ems="10"
                android:hint="@string/traduccion"
                android:importantForAutofill="no"
                android:maxLines="6"
                android:minHeight="180sp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:scrollbars="vertical"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:src="@drawable/ic_baseline_content_copy_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>