<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"

    android:minHeight="50dp"
    app:cardBackgroundColor="#EFEFEF"
    app:cardCornerRadius="4dp"

    tools:context=".ui.diccionario.diccionario_palabras">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diccf2_palabra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Palabra"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/diccf2_palabra2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="palabra"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diccf2_pronuciar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pronuciar" />

                <TextView
                    android:id="@+id/diccf2_pronuciar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="espanol" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/diccf2_button"
                android:layout_width="83dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Ver mas" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="contenido: "
                android:visibility="invisible" />

            <TextView
                android:id="@+id/diccf2_contenidon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="###"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/ic_baseline_share_24" />

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_content_copy_24" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>